<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


<h3>Comments</h3>

<% @post.comments.each do |comment| %>
  <p>
  <%= comment.author %> said: </p>
  <blockquote>
    <%= comment.body %>
  </blockquote>

<% end %>
<br/>
<%= render 'comments/new' %>
